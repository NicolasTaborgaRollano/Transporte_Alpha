<odoo>
    <record id="view_tipo_reporte_tree" model="ir.ui.view">
        <field name="name">gestion.tipo_reporte.tree</field>
        <field name="model">gestion.tipo_reporte</field>
        <field name="arch" type="xml">
            <list string="Tipos de Reporte">
                <field name="name"/>
                <field name="descripcion"/>
            </list>
        </field>
    </record>

    <record id="view_tipo_reporte_form" model="ir.ui.view">
        <field name="name">gestion.tipo_reporte.form</field>
        <field name="model">gestion.tipo_reporte</field>
        <field name="arch" type="xml">
            <form string="Tipo de Reporte">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tipo_reporte" model="ir.actions.act_window">
        <field name="name">Tipos de Reporte</field>
        <field name="res_model">gestion.tipo_reporte</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_tipo_reporte_root" name="Tipos de Reporte" parent="base.menu_custom" sequence="7"/>
    <menuitem id="menu_tipo_reporte" name="Gestionar Tipos de Reporte" parent="menu_tipo_reporte_root" action="action_tipo_reporte"/>
</odoo>

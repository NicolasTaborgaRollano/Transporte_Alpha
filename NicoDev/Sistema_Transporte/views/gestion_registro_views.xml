<odoo>
    <record id="view_gestion_registro_list" model="ir.ui.view">
        <field name="name">gestion.registro.list</field>
        <field name="model">gestion.registro</field>
        <field name="arch" type="xml">
            <list string="Registros de Transporte">
                <field name="persona_que_llamo"/>
                <field name="nombre"/>
                <field name="apellido_paterno"/>
                <field name="fecha"/>
                <field name="hora"/>
                <field name="destino_id"/>
                <field name="tecnico_id"/>
                <field name="empresa_id"/>
                <field name="cantidad_bs"/>
                <field name="facturable"/>
            </list>
        </field>
    </record>

    <record id="view_gestion_registro_form" model="ir.ui.view">
        <field name="name">gestion.registro.form</field>
        <field name="model">gestion.registro</field>
        <field name="arch" type="xml">
            <form string="Registro de Transporte">
                <sheet>
                    <group>
                        <group string="Datos del Solicitante">
                            <field name="persona_que_llamo"/>
                            <field name="nombre"/>
                            <field name="apellido_paterno"/>
                            <field name="password" password="True"/>
                        </group>
                        <group string="Fecha y Hora">
                            <field name="fecha"/>
                            <field name="hora"/>
                        </group>
                    </group>

                    <group>
                        <group string="Detalles de Transporte">
                            <field name="destino_id"/>
                            <field name="tecnico_id"/>
                            <field name="departamento_id"/>
                        </group>
                        <group string="Datos de Empresa / Reporte">
                            <field name="empresa_id"/>
                            <field name="tipo_reporte_id"/>
                            <field name="numero_informe"/>
                            <field name="cantidad_bs"/>
                            <field name="facturable"/>
                        </group>
                    </group>

                    <group string="Observaciones">
                        <field name="observaciones"/>
                    </group>

                    <notebook>
                        <page string="Planilla de uso de Transporte">
                            <field name="lineas_transporte">
                                <list editable="bottom">
                                    <field name="tecnico_id"/>
                                    <field name="destino_id"/>
                                    <field name="vuelta"/>
                                    <field name="bs"/>
                                    <field name="firma"/>
                                    <field name="salida"/>
                                    <field name="cliente"/>
                                    <field name="informe"/>
                                    <field name="detalle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gestion_registro" model="ir.actions.act_window">
        <field name="name">Registro de Transporte</field>
        <field name="res_model">gestion.registro</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_gestion_registro_root"
              name="Registros de Transporte"
              parent="menu_operaciones"
              sequence="1"
              action="action_gestion_registro"/>
</odoo>

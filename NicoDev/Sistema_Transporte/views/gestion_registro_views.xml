<odoo>
    <!-- Vista de lista (list) -->
    <record id="view_gestion_registro_list" model="ir.ui.view">
        <field name="name">gestion.registro.list</field>
        <field name="model">gestion.registro</field>
        <field name="arch" type="xml">
            <list string="Registros">
                <field name="name"/> <!-- Nombre completo -->
                <field name="persona_que_llamo"/>
                <field name="destino_id"/>
                <field name="tecnico_id"/>
                <field name="departamento_id"/>
                <field name="numero_informe"/>
                <field name="fecha"/>
                <field name="hora"/>
                <field name="cantidad_bs"/>
                <field name="empresa_id"/>
                <field name="tipo_reporte_id"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario (form) -->
    <record id="view_gestion_registro_form" model="ir.ui.view">
        <field name="name">gestion.registro.form</field>
        <field name="model">gestion.registro</field>
        <field name="arch" type="xml">
            <form string="Registro">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="apellido_paterno"/>
                        <field name="password"/>
                        <field name="persona_que_llamo"/>
                    </group>
                    <group>
                        <field name="destino_id"/>
                        <field name="tecnico_id"/>
                        <field name="departamento_id"/>
                        <field name="empresa_id"/>
                        <field name="tipo_reporte_id"/>
                    </group>
                    <group>
                        <field name="numero_informe"/>
                        <field name="fecha"/>
                        <field name="hora"/>
                        <field name="cantidad_bs"/>
                        <field name="currency_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir registros -->
    <record id="action_gestion_registro" model="ir.actions.act_window">
        <field name="name">Registros</field>
        <field name="res_model">gestion.registro</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_gestion_registro_root" name="Registros" parent="base.menu_custom" sequence="4"/>
    <menuitem id="menu_gestion_registro" name="Gestionar Registros" parent="menu_gestion_registro_root" action="action_gestion_registro"/>
</odoo>

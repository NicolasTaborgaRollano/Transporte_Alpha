<odoo>
    <menuitem id="menu_gestion_root" name="Gestión de Transporte" sequence="1"/>

    <menuitem id="menu_configuracion" name="Configuración" parent="menu_gestion_root" sequence="1"/>
    <menuitem id="menu_operaciones" name="Operaciones" parent="menu_gestion_root" sequence="2"/>

    <!-- Configuración -->
    <menuitem id="menu_destino" name="Destinos" parent="menu_configuracion" action="action_destino" sequence="1"/>
    <menuitem id="menu_tecnico" name="Técnicos" parent="menu_configuracion" action="action_tecnico" sequence="2"/>
    <menuitem id="menu_departamento" name="Departamentos" parent="menu_configuracion" action="action_departamento" sequence="3"/>

    <!-- Operaciones -->
    <!-- Define the action FIRST -->
    <record id="action_gestion_registro" model="ir.actions.act_window">
        <field name="name">Registro de Transporte</field>
        <field name="res_model">gestion.registro</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Then reference it in the menuitem -->
    <menuitem id="menu_gestion_registro"
              name="Gestión de Registros"
              parent="menu_operaciones"
              action="action_gestion_registro"
              sequence="1"/>
</odoo>